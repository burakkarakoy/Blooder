<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka2"
    tools:context="com.burak.blooder.Dashboard">

    <Button
        android:id="@+id/meButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"

        android:backgroundTint="@android:color/transparent"
        android:text="Profilim"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/iNeedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/meButton"
        android:text="Aradığım Kan:"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <Spinner

        android:id="@+id/meSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iNeedText"
        android:layout_marginTop="29dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:elevation="0dp"
        android:ems="10"
        android:gravity="top|left"

        android:hint="Lütfen ayrıntılı bilgi veriniz."
        android:inputType="textMultiLine"
        android:textColorHint="@android:color/white" />

    <Button
        android:id="@+id/announceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:backgroundTint="@android:color/transparent"
        android:text="DUYUR!"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>
